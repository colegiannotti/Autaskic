@model IEnumerable<TaskDaily>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

      <section class="jumbotron text-center">
        <div class="container">
          <h1 class="jumbotron-heading">Daily Tasks</h1>
          <p class="lead text-muted">These are tasks to be completed every day.</p>
        </div>
      </section>

      <div class="album py-5 bg-light">
        <div class="container">

          <div class="row">
            @foreach(var item in Model)
            {
            <div class="col-md-4">
              <div class="card mb-4 box-shadow">
                <div class="card-body">
                  <p class="card-text">Name: @item.Name</p>
                  <p class="card-text">Description: @item.Description</p>
                  <p class="card-text">Priority: @item.Priority</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <a asp-controller="taskdaily" asp-action="Detail" asp-route-id="@item.Id" type="button" class="btn btn-sm btn-outline-secondary" onclick="">View</a>
                      <a asp-controller="taskdaily" asp-action="Update" asp-route-id="@item.Id" type="button" class="btn btn-sm btn-outline-secondary" onclick="">Edit</a>
                    </div>
                    <small class="text-muted">9 mins</small>
                  </div>
                </div>
              </div>
            </div> 
            }
          </div>
          <a asp-controller="taskdaily" asp-action="Create" type="button" class="btn btn-sm btn-outline-secondary" onclick="">New</a>
        </div>
       </div>