@{
}

<form method="post" asp-action="Update">
  <input type="hidden" value="Id" id="Id"/>
  <div class="form-group">
    <label asp-for="Name">Name</label>
    <input asp-for="Name" class="form-control" placeholder="Enter name">
  </div>
  <div class="form-group">
    <label asp-for="Description">Description</label>
    <input asp-for="Description" class="form-control" placeholder="Enter description">
  </div>
  <div class="form-group">
    <label asp-for="Energy">Cost: Energy</label>
    <input asp-for="Energy" class="form-control" placeholder="Enter energy cost">
  </div>
  <div class="form-group">
    <label asp-for="Enjoyment">Cost: Enjoyment</label>
    <input asp-for="Enjoyment" class="form-control" placeholder="Enter enjoyment cost">
  </div>
  <div class="form-group">
    <label asp-for="Priority">Priority</label>
    <input asp-for="Priority" class="form-control" placeholder="Enter priority">
  </div>
  <div class="form-group">
    <label asp-for="LastCompletedDate">Last Completed Date</label>
    <input asp-for="LastCompletedDate" class="form-control" placeholder="Enter last completed date">
  </div>
  <div class="form-group">
    <label asp-for="Tolerance">Tolerance</label>
    <input asp-for="Tolerance" class="form-control" placeholder="Enter tolerance">
  </div>
  <div class="form-group">
    <label asp-for="TimeOfDay">Time of Day</label>
    <input asp-for="TimeOfDay" class="form-control" placeholder="Enter time of day">
  </div>
  <button type="submit" class="btn btn-primary">Save</button>
</form>

<form asp-controller="TaskTransition" asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id"/>
    <input type="submit" value="Delete" class="btn btn-sm btn-outline-secondary"/>
</form>